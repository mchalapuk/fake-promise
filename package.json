{
  "name": "fake-promise",
  "version": "1.0.0",
  "description": "Promise with behavior controlled by .resolve(result) and .reject(error) methods.",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf lib #",
    "compile-ts": "tsc",
    "compile-coffee": "coffee -c -m -o lib src",
    "compile": "npm run compile-coffee && npm run compile-ts",
    "test": "mocha --use_strict lib/mocha.config.js $(find lib -name \"*.spec.js\")",
    "build": "npm run compile && npm test",
    "clean-build": "npm run clean && npm run compile && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/muroc/fake-promise.git"
  },
  "keywords": [
    "promise",
    "fake",
    "unit-tests",
    "testing",
    "util",
    "mock"
  ],
  "author": "Maciej Cha≈Çapuk (maciej@chalapuk.pl)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/muroc/fake-promise/issues"
  },
  "homepage": "https://github.com/muroc/fake-promise#readme",
  "devDependencies": {
    "coffeescript": "^1.12.7",
    "mocha": "^3.5.3",
    "should": "^13.0.1",
    "sinon": "^3.2.1",
    "typescript": "^2.5.2"
  }
}
