{
  "compilerOptions": {
    "allowJs": false,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ES5",
      "ES2015.Core",
      "ES2015.Promise"
    ],
    "module": "commonjs",
    "moduleResolution": "Node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noResolve": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "outDir": "lib/",
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "sourceRoot": "src/",
    "strictNullChecks": true,
    "target": "ES6",
    "types": []
  },
  "include": [
    "src/**/*.ts"
  ]
}

